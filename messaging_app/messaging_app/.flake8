[flake8]
max-line-length = 127
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    migrations,
    staticfiles,
    static,
    media,
    node_modules,
    .tox,
    .eggs,
    *.egg,
    build,
    dist,
    .pytest_cache,
    .coverage,
    htmlcov,
    coverage.xml,
    test-results.xml,
    test-report.html

# Django specific ignores
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    F401,  # imported but unused (common in Django)
    F403,  # wildcard import (common in Django)
    F405,  # name may be undefined, or defined from star imports
    E722,  # do not use bare except
    W291,  # trailing whitespace
    W292,  # no newline at end of file
    W293,  # blank line contains whitespace

# Per-file ignores
per-file-ignores =
    # Ignore unused imports in __init__.py files
    __init__.py:F401
    # Ignore line length in migrations
    migrations/*:E501
    # Ignore complexity in tests
    tests.py:C901
    test_*.py:C901
